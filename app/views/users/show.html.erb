<% if current_user %>
	<div class="user-info">
		<div class="user-logo-icon"></div>
		<%= link_to 'log out', logout_path, :class => "user-logout-btn" %>
		<div class="user-credentials">
			<p class="user-credentials-text"><%= current_user.first_name %> <%= current_user.last_name %></p>
			<p class="user-credentials-text">Username: <%= current_user.username %></p>
			<p class="user-credentials-text">Email: <%= current_user.email %></p>
		</div>
		<ul class="user-options">
			<li class='user-options-item'><%= link_to 'new deck', new_deck_path, :class => 'user-options-item' %></li>
			<li class='user-options-item'><%= link_to 'edit account', edit_deck_path, :class => 'user-options-item' %></li>
			<li class='user-options-item'><%= link_to 'delete account', user_path(current_user.id), :class => 'user-options-item', method: :delete, data: { confirm: "Are you sure you want to permanently delete your account? We will miss you." } %></li>
		</ul>
	</div>
	<div class="user-played-decks">
		<% @decks.each do |deck| %>
			<div class="user-deck">
				<%= deck %>
			</div>
		<% end %>
	</div>
<% end %>
