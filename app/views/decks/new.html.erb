<h2>New Deck</h2>

<div class="decks-background">
  <div class="decks-image"></div>
  <%= form_for @deck do |f| %>
  	<%= f.text_field :title, :required => true %>
  	<%= f.text_area :description, :size => "60x12", :required => true  %>
  	<%= f.file_field :deck_image, :accept => "image/*" %>
  	<%= f.file_field :deck, :accept => "text/csv" %>
  	<%= f.select :private?, [['Public', 1], ['Private', 2]] %>
  	<%= f.submit "Upload Deck" %>
  <% end %>
</div>
